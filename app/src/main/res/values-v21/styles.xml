<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <!-- Toolbar use -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Toolbar use -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#ffffff</item>
    </style>



    <!-- *************************************************** -->

    <style name="EditText_White">
        <item name="met_baseColor">#ffffffff</item>
        <item name="met_floatingLabel">normal</item>
        <item name="met_floatingLabelTextColor">#ffffffff</item>
        <item name="met_floatingLabelTextSize">15sp</item>
        <item name="met_hideUnderline">true</item>
        <item name="met_primaryColor">#fff</item>
        <item name="met_textColorHint">#ffffff</item>
    </style>

    <style name="EditText_Black">
        <item name="met_baseColor">#000000</item>
        <item name="met_floatingLabel">normal</item>
        <item name="met_floatingLabelTextColor">#000000</item>
        <item name="met_floatingLabelTextSize">15sp</item>
        <item name="met_hideUnderline">true</item>
        <item name="met_primaryColor">#000</item>
        <item name="met_textColorHint">#000000</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Black">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="TextView_Menu">
        <item name="android:layout_marginBottom">24dp</item>
        <!--<item name="android:textColor">#99ffffff</item>-->
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@drawable/selector_menu</item>
    </style>

    <style name="TextView_Group">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#66666666</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title_text_col">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="title_text_exp">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
