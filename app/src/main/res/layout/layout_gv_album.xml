<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <com.maye.today.view.AdapterLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_gv_album_bitmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/iv_gv_album_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/iv_gv_album_bitmap"
            android:layout_alignTop="@id/iv_gv_album_bitmap"
            android:layout_margin="4dp"
            />
            <!--android:background="@mipmap/ic_check"-->

    </com.maye.today.view.AdapterLayout>

</RelativeLayout>