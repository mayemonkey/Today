<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.maye.today.today"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.maye.today.global.TodayApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Base">
        <activity android:name="com.maye.today.ui.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.maye.today.ui.activity.RegisterActivity"/>

        <activity android:name="com.maye.today.ui.activity.ListActivity"/>

        <activity android:name="com.maye.today.ui.activity.SettingActivity"/><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

    </application>

</manifest>
